doctype html
html
  head
    title
      | Dating
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "https://js.stripe.com/v2/", "application"
    = csrf_meta_tags
    = tag :meta, :name => "stripe-key", :content => STRIPE_PUBLIC_KEY
    script
      |  $(document).ready(function() { $('.ajax').click(function() { $.get(this.href, function(response) { # In here you should be getting the response from your controller action # you should be able to run console.log(response); # to see the response in your console (f12, or ctrl+option+i) # you'll want to do something like $('body').html(response); # it's not the prettiest way of doing it, but will get you up and running. }); }); }); 
  body
    - if current_user
      |  Logged in as 
      = current_user.email
      = link_to "Log Out", logout_path
      = link_to 'My Conversations', :conversations
      = current_user.mailbox.inbox(:unread => true).count
    - else
      = link_to "Sign Up", signup_path
      |  or 
      = link_to "Log In", login_path
    = flash_messages
    #container
      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}"
      = content_tag :h1, yield(:title) if show_title?
      = yield
      script[type="text/javascript"]
        |  $(document).ready(function () { $('.active-links').click(function () { $('#signin-dropdown').toggle(); $('#session').toggleClass('active'); return false; }); $('#signin-dropdown').click(function(e) { e.stopPropagation(); }); $(document).click(function() { $('#signin-dropdown').hide(); $('#session').removeClass('active'); }); }); 
      .active-links
        #session
          em
            | Have an account?
          strong
            | Sign in
        #signin-dropdown
          = form_tag sessions_path, :class => 'signin' do
            fieldset.textbox
              label.username
                span
                  | Username or email
                = text_field_tag :email, params[:email]
                br
              label.password
                span
                  | Password
                = password_field_tag :password
            fieldset.remb
              label.remember
                = check_box_tag :remember_me, 1, params[:remember_me]
                span
                  | Remember me
              .actions
                = submit_tag "Log In"
            p
              = link_to "forgot your password?", new_password_reset_path
              br
