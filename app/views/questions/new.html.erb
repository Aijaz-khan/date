<h1>New Question</h1>
<%= form_for @question do |f| %>
<%= @question.errors.full_messages.each do |msg| %>
<li><%= msg %></li>
<% end %>
	<ul>
		<li><%= f.text_field :question, {:placeholder => 'Please add your question...'} %></li>
		<li><%= f.text_field :sender_id, {:placeholder => 'Please add your name...'} %></li>
		<li><%= f.text_field :recipient_id, {:placeholder => 'Enter id send to'} %></li>
		<li><%= f.submit %></li>
		</ul>
		<% end %>
		<%= link_to "Back", questions_path, :class => "button" %>