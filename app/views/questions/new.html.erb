<h1>New Question</h1>
<%= form_for @question do |f| %>
<%= @question.errors.full_messages.each do |msg| %>
<li><%= msg %></li>
<% end %>
	<ul>
		<li><%= f.text_field :question, {:placeholder => 'Please add your question...'} %></li>
	<% #this is not the safest way to do it for security reasons with hidden field  %>
	<%= f.hidden_field :sender_id, :value => current_user.id %>
		<li><%= f.text_field :recipient_id, {:placeholder => 'Enter id send to'} %></li>
		<li><%= f.submit %></li>
		</ul>
		<% end %>
		<%= link_to "Back", questions_path, :class => "button" %>