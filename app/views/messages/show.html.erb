<p>
        <strong>From:</strong> 
        <%= @message.sender %>
</p>
<p>
        <strong>To:</strong> 
        <%= @message.recipient %>
</p><div class="message">
  <div class="created_at"><%= @message.created_at.strftime('%B %-d, %Y %l:%M%P')  %></div>
  <div class="content"><P>
	<%=h @message.body %>

  </div>

  <div class="actions">
      	 <%= link_to "Reply", reply_user_messages_path(@message.sender, conversation_id: @message.conversation_id ? @message.conversation_id : @message.id) %>


     |
    <%= link_to "Delete", [current_user, @message], :confirm => 'Are you sure you want to delete this message?', :method => :delete %>

  </div>
</div>

<% if @message.question.present? %>
<%= form_for @message.question, :url => question_path(@message.question),                                 
                                                                         method: :put do |f| %>
                                        <%= f.label :answer, "Reply here:" %>
                                        <%= f.text_area :answer %>
                                        <%= f.submit "Send" %>
                                <% end %>

<% end %>

<%= form_for @reply_message, url: user_messages_path, method: :post do |f| %>
<%= f.hidden_field :conversation_id, :value => @message.conversation_id %>
    <p>
      To:<br />
      <%= f.text_field :recipient_id, :value => @message.sender_id %> 
    </p>

        <%= f.hidden_field :subject, :value => "RE:" %>
      <p>
        Message<br />
        <%= f.text_area :body %>
      </p>

      <%= submit_tag "Send"%>
<% end %><p>
    <% if @message.next %>
      <%= link_to 'Next', user_message_path(current_user, @message.next) %>
    <% end %>
    <% if @message.previous %>
      <%= link_to 'Previous', user_message_path(current_user, @message.previous) %>
    <% end %>
    </p>

<p>
    <% if @message.recipient == @user %>

    <%= link_to "Reply", new_user_message_path(@user, :reply_to => @message.sender.id) %>

     |
    <% end %>
    <%= link_to "Inbox", user_messages_path(current_user, :mailbox=>:inbox)%>
    |
    <%= link_to "Delete", [current_user, @message], :confirm => 'Are you sure you want to delete this message?', :method => :delete %>

</p>