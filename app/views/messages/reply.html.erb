
<%= form_for @message, :url => user_messages_path(@user) do |f| %>
<%= f.hidden_field :conversation_id %>
          <%= f.hidden_field :recipient_id, :value => params[:user_id] %> 
            <%= f.hidden_field :subject, :value => "RE:" %>
      <p>
        Message<br />
        <%= f.text_area :body %>
      </p>

      <%= submit_tag "Send"%>
<% end %>