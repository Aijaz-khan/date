<%= form_for @message, :url => user_messages_path(@user) do |f| %>
  <% if @message.recipient_id.nil? %>
    <p>
      To:<br />
       <%= f.hidden_field :recipient_id, :value => params[:user_id] %> 
    </p>

  <% end %>
      <p>
        Subject:<br />
        <%= f.text_field :subject %>
      </p>
      <p>
        Message<br />
        <%= f.text_area :body %>
      </p>

      <%= submit_tag "Send"%>
<% end %>
<%= link_to "View Inbox", user_messages_path(current_user, :mailbox=>:inbox)%> |
<%= link_to "View Sent Messages", user_messages_path(current_user, :mailbox => :sent)%> |
<%= link_to "View Trash", user_messages_path(current_user, :mailbox => :trash)%>