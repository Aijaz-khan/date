<h1><%= @user.username %></h1>
<% @user.photos.each do |photo| %>
    <%= link_to image_tag(photo.image_url(:thumb)), photo.image_url%>
<% end %></p>

  <%= link_to "Add a Photo", new_photo_path(:gallery_id => @gallery) %>


<% unless current_user?(@user) %>
  <div id="follow_form">
  <% if current_user.following?(@user) %>
    <%= render 'unfollow' %>
  <% else %>
    <%= render 'follow' %>
  <% end %>
  </div>
<% end %>


